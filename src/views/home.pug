doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title czoom
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body
    header
      h1 czoom
    main
      h2 Welcome to czoom
      div#nickname
        label Enter your Nickname:
        input#nickname(type="text" name="nickname" required)
      nav(style="margin: auto 0 0 auto")
        h4 Enter a existing room
        ul
      div#create
        h4 or create a new room
        form
          label Room Name:
          input(type="text" id="roomName" name="roomName" required)
          button Submit
      button#exit Exit Room
      div#room
        h3
        ul
          li test
        form
          input(type="text" id="message" placeholder="Type your message here...")
          button Send

    script(src="/socket.io/socket.io.js")
    script(src="public/js/app.js")
